<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <!--属性定义-->
    <property name="name" value="/Users/zhuminghua/logs/swift-demo/demo" />
    <property name="port" value="${port:-80}" />
    <property name="day" value="10" />

    <!--控制台输出-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}][%thread][%level][%X{requestId}] %logger{50}:%line - %msg%n</pattern>
        </encoder>
    </appender>

    <!--文件输出-->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">　　　　　　　　　　　　
        <file>${name}-${port}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">　　　　　　　　　　　　
            <fileNamePattern>${name}-${port}-%d{yyyy-MM-dd}.zip</fileNamePattern>　　　　　　　　　　　　　
            <maxHistory>${day}</maxHistory>　　　　　　　　　　　
        </rollingPolicy>　　　　　
        <encoder>　　　　　　　　　　　
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}][%thread][%level][%X{requestId}] %logger{50}:%line - %msg%n</pattern>　　　　　　　　　　　
        </encoder>　　
    </appender>

    <!--主日志级别-->
    <root level="info">
        <appender-ref ref="console"/>
        <appender-ref ref="file"/>
    </root>
    <!--包日志级别-->
    <logger name="com.ibatis" level="debug"/>
    <logger name="java.sql" level="debug"/>

</configuration>
